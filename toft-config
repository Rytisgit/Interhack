# botl {{{
#$statusline = sub { my $timepos = 80 - length($botl{time}); "$botl{score} \e[23;${timepos}H$colormap{darkgray}$botl{time}\e[0m" };
$statusline = sub
{
    my $time_length = length($botl{time});
    my $cur_length;
    sprintf "S:%d E:%d K:%d \e[23;%dH$colormap{darkgray}%s\e[0m",
            $score,
            $elbereths,
            $keystrokes,
            80 - $time_length,
            $botl{time},
};
# }}}
