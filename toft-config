# remappings {{{
our $elbereths = 0;
remap "\ce" => sub { $elbereths++; "E-  Elbereth\n" };
remap "\cw" => "aany\e"; # drawbridge
remap "\cv" => sub { $elbereths += 3; ("E-  Elbereth\n"x3).">      " };
# }}}
# autoadjusts {{{
sub autoadjust;

autoadjust $aa_key         => "k";
